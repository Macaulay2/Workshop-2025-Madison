{
  "name": "Macaulay2 Codespace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "onCreateCommand": "bash .devcontainer/setup.sh",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "intisar.macaulay2-codespace",
        "ritwickdey.LiveServer"
      ],
      "settings": {
        "macaulay2.executablePath": "/usr/bin/M2"
      }
    }
  },
  "env": {
    "BROWSER": "npx live-server "
  }
}